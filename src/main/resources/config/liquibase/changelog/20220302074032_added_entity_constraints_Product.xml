<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Product.
    -->
    <changeSet id="20220302074032-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="categories_id"
                                 baseTableName="product"
                                 constraintName="fk_product__categories_id"
                                 referencedColumnNames="id"
                                 referencedTableName="categories"/>

        <addForeignKeyConstraint baseColumnNames="unit_id"
                                 baseTableName="product"
                                 constraintName="fk_product__unit_id"
                                 referencedColumnNames="id"
                                 referencedTableName="unit"/>

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="rel_product__raw_material_order"
                                 constraintName="fk_rel_product__raw_material_order__product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

        <addForeignKeyConstraint baseColumnNames="raw_material_order_id"
                                 baseTableName="rel_product__raw_material_order"
                                 constraintName="fk_rel_product__raw_material_order__raw_material_order_id"
                                 referencedColumnNames="id"
                                 referencedTableName="raw_material_order"/>

        <addForeignKeyConstraint baseColumnNames="security_user_id"
                                 baseTableName="product"
                                 constraintName="fk_product__security_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="security_user"/>
    </changeSet>
</databaseChangeLog>
